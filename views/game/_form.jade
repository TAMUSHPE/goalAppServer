form(role='form', action=""+view.action,method="post", style='max-width: 300px;')
  .form-group
      input.form-control(type='text', name="name", placeholder='Name' value=game.name || '')
  .form-group
    input.form-control(type='text', name="desc", placeholder='Desc' value=game.desc || '')
  .form-group
    label.col-lg-2.control-label(for='select')|CO-OP
    select.form-control(name='coop')
        each val in ['true', 'false']
            if (game.coop)
                option.selected=val
            else
                option= val
  if (view.put)
  .form-group
    input.form-control(name='_method', value="PUT", type='hidden')
  button.btn.btn-default(type='submit') Submit
  &nbsp;
  a(href='/')
    button.btn.btn-primary(type="button") Cancel