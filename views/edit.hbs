<div class="container">
	<h1>Edit Profile</h1>
	<form action="/edit" role="form" method="post" enctype="multipart/form-data" style="max-width: 300px;">
		<div class="form-group">
			<label for="email">Email</label>
			<input type="text" name="email" class="form-control" value="{{user.email}}">
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input type="text" name="password" class="form-control">
		</div>
		<div class="form-group">
			<label for="password">Confirm Password</label>
			<input type="text" name="password2"class="form-control">
		</div>
		<div class="form-group">
			<label for="Bio">Bio</label>
			<textarea type="text" name="Bio" class="form-control">
			{{user.bio}}
			</textarea>
		</div>
		{{#if user.image}}
		  <img src="/images/{{user.image}}" height="160" width="160">	
		{{/if}}
		<div class="form-group">
			<label for="file">update avatar Image</label>
			<input type="file" name="Image" class="form-control">
			</div>
		<button class="btn btn-default" type="submit">Submit</button>
		<a href="">
			<button class="btn btn-primary">Cancel</button>
		</a>	
	</form>											

</div>
