form(role='form', action=""+view.action,method="post", style='max-width: 300px;')
  .form-group
    input.form-control(type='text', name="name", placeholder='Name' ,value=group.name || '')
  .form-group
    input.form-control(type='text', name="desc", placeholder='Desc' , value = group.desc || '')
  if (view.put)
    .form-group
      input.form-control(name='_method', value="PUT", type='hidden')
  button.btn.btn-default(type='submit') Submit
  &nbsp;
  a(href=''+view.action)
    button.btn.btn-primary(type="button") Cancel